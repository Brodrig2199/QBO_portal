<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Reportes</title>
</head>
<body class="bg-light">
<div class="container py-4" style="max-width:900px">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">Generar Reporte QBO</h4>
    <form method="post" action="/logout"><button class="btn btn-outline-secondary btn-sm">Salir</button></form>
  </div>

  <div class="card shadow-sm"><div class="card-body p-4">
    <form id="f" class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Empresa</label>
        <select class="form-select" name="companyClientId" required>
          <% companies.forEach(c => { %><option value="<%= c.clientId %>"><%= c.name %></option><% }) %>
        </select>
      </div>

      <div class="col-md-6">
        <label class="form-label">Tipo de reporte</label>
        <select class="form-select" name="reportType" required>
          <% reports.forEach(r => { %><option value="<%= r.id %>"><%= r.name %></option><% }) %>
        </select>
      </div>

      <div class="col-md-6">
        <label class="form-label">Fecha inicio</label>
        <input class="form-control" type="date" name="startDate" required>
      </div>

      <div class="col-md-6">
        <label class="form-label">Fecha final</label>
        <input class="form-control" type="date" name="endDate" required>
      </div>

      <div class="col-12">
        <label class="form-label">Excluir cuentas (coma)</label>
        <input class="form-control" name="excludeAccounts" placeholder="ITBMS, 6010 Gasolina">
      </div>

      <div class="col-12 d-grid">
        <button class="btn btn-primary btn-lg">Submit / Descargar Excel</button>
      </div>

      <div class="text-danger" id="err"></div>
    </form>
  </div></div>
</div>

<script>
  const form = document.getElementById("f");
  const err = document.getElementById("err");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    err.textContent = "";

    const fd = new FormData(form);
    const exclude = (fd.get("excludeAccounts") || "")
      .split(",").map(s => s.trim()).filter(Boolean);

    const payload = {
      companyClientId: fd.get("companyClientId"),
      reportType: fd.get("reportType"),
      startDate: fd.get("startDate"),
      endDate: fd.get("endDate"),
      excludeAccounts: exclude
    };

    const resp = await fetch("/api/run-report", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });

    if (!resp.ok) {
      const data = await resp.json().catch(() => ({}));
      err.textContent = data.error || "Error";
      return;
    }

    const blob = await resp.blob();
    const a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = `QBO_${payload.reportType}_${payload.startDate}_${payload.endDate}.xlsx`;
    document.body.appendChild(a);
    a.click();
    a.remove();
  });
</script>
</body>
</html>
